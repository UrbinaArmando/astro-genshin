---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import type { Lang } from "../i18n";
import anemoIcon from "../assets/elements/anemo.png";
import heroGenshin from "../assets/hero-genshin.png";
import "../styles/global.css";

interface Props {
	title?: string;
	lang?: Lang;
	description?: string;
	ogImage?: string;
}

const {
	title = "Genshin Hub",
	lang = "es",
	description = "Explore characters, elements and builds from Genshin Impact in a fast bilingual database.",
	ogImage = heroGenshin.src
} = Astro.props;

const canonicalUrl = Astro.url;
const ogImageUrl = new URL(ogImage, Astro.url).toString();
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={anemoIcon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalUrl.toString()} />
		<meta property="og:image" content={ogImageUrl} />
		<meta property="og:site_name" content="Genshin Hub" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageUrl} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="bg-slate-900 text-slate-100 font-sans min-h-screen flex flex-col"
	>
		<Navbar lang={lang} />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer lang={lang} />
	</body>
</html>

<style is:global>
	:root {
		--font-sans: "Outfit", system-ui, -apple-system, sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
</style>
