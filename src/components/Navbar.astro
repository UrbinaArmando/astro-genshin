---
interface Props {
    lang?: "es" | "en";
}

const { lang = "es" } = Astro.props;

const t = {
    home: lang === "es" ? "Inicio" : "Home",
    characters: lang === "es" ? "Personajes" : "Characters",
    tierList: "Tier List",
    teams: lang === "es" ? "Equipos" : "Teams",
    openMenu: lang === "es" ? "Abrir men√∫ principal" : "Open main menu"
};

const basePath = lang === "en" ? "/en/" : "/";
---

<nav
    class="bg-slate-900 border-b border-slate-800 text-white sticky top-0 z-50 backdrop-blur-md bg-opacity-90"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
                <a
                    href={basePath}
                    class="flex-shrink-0 font-bold text-2xl text-yellow-400 tracking-wider"
                >
                    GENSHIN.DB
                </a>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a
                            href={basePath}
                            class="hover:bg-slate-700 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                            >{t.home}</a
                        >
                        <a
                            href={`${basePath}#characters`}
                            class="hover:bg-slate-700 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                            >{t.characters}</a
                        >
                        <a
                            href="#"
                            class="hover:bg-slate-700 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                            >{t.tierList}</a
                        >
                        <a
                            href="#"
                            class="hover:bg-slate-700 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                            >{t.teams}</a
                        >
                    </div>
                </div>
            </div>

            <div class="hidden md:flex items-center gap-2 text-xs">
                <a
                    href="/"
                    class={`px-2 py-1 rounded border transition-colors ${lang === "es" ? "bg-yellow-500 text-slate-900 border-yellow-400" : "bg-slate-800 text-slate-200 border-slate-600 hover:bg-slate-700"}`}
                >
                    ES
                </a>
                <a
                    href="/en/"
                    class={`px-2 py-1 rounded border transition-colors ${lang === "en" ? "bg-yellow-500 text-slate-900 border-yellow-400" : "bg-slate-800 text-slate-200 border-slate-600 hover:bg-slate-700"}`}
                >
                    EN
                </a>
            </div>

            <div class="-mr-2 flex md:hidden">
                <button
                    type="button"
                    class="bg-slate-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-800 focus:ring-white"
                >
                    <span class="sr-only">{t.openMenu}</span>
                    <svg
                        class="block h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</nav>
