---
import { t, type Lang } from "../i18n";

interface Props {
    lang?: Lang;
}

const { lang = "es" } = Astro.props;
const year = new Date().getFullYear();

---

<footer class="bg-slate-950 text-slate-400 py-8 mt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="mb-4">
            {t(lang, "footer.legal", { year })}
        </p>
        <div class="flex justify-center space-x-6">
            <a href="#" class="hover:text-white transition-colors"
                >{t(lang, "footer.privacy")}</a
            >
            <a href="#" class="hover:text-white transition-colors"
                >{t(lang, "footer.terms")}</a
            >
            <a href="#" class="hover:text-white transition-colors">{t(lang, "footer.contact")}</a>
        </div>
    </div>
</footer>
